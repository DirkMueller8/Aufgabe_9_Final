<Window x:Class="Aufgabe_9_Final.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aufgabe_9_Final"
        mc:Ignorable="d"
        Title="Roman to Arabic" Loaded="Window_Loaded" Height="210" Width="400">
  <Grid>

    <TextBox x:Name="txtInputRoman" HorizontalAlignment="Left" Margin="42,86,0,0" Text="MCMXCVII" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    <Label x:Name="label" Content="This program converts roman numbers into arabic numbers" HorizontalAlignment="Center" Margin="0,34,0,0" VerticalAlignment="Top"/>
    <TextBox x:Name="txtOutputArabic" HorizontalAlignment="Left" Margin="42,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    <Button x:Name="btnConvert" Content="Convert" HorizontalAlignment="Left" Margin="200,85,0,0" VerticalAlignment="Top"/>
    <Label x:Name="lblMessage" Content="" HorizontalAlignment="Left" Margin="42,162,0,0" VerticalAlignment="Top"/>
  </Grid>
</Window>
